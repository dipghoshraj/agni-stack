# GraphQL schema example
#
# https://gqlgen.com/getting-started/


directive @auth on FIELD_DEFINITION


type User {
  id: ID!
  name: String!
  email: String!
}

input UserInput {
  name: String!
  email: String!
  password: String!
}

input LoginInput {
  email: String!
  password: String!
}

type Query {
  myDetails: User! @auth
}

type Mutation {
  createUser(input: UserInput!): User!
  login(input: LoginInput!): String! # JWT token
}